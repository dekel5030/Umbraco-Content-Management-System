@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>

@{
    var image = Model.Value<IPublishedContent>("image");
}
<a href="@Model.Url()" class="btn">
    <div class="article-card" style="border: 1px solid #ccc; padding: 15px; margin: 10px; border-radius: 8px;">
    @if (image != null)
    {
        <img src="@image.Url()" alt="@Model.Name" style="width: 100%; height: auto;" />
    }
    
    <h3>@Model.Value("title")</h3>
    
</div>
</a>
